@using MVCSTOKTAKIP.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <td>MUSTERI ID</td>
        <td>MUSTERI AD</td>
        <td>MUSTERI SOYAD</td>
        <td> SİL </td>
        <td> GÜNCELLE</td>
        <td>  Alert</td>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {

            <tr>
                <th>@musteri.MUSTERIID</th>f
                <td>@musteri.MUSTERIAD</td>
                <td>@musteri.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@musteri.MUSTERIID" class="btn btn-danger">SIL</a> </td>
                <td><a href="/MUSTERI/MusteriGetir/@musteri.MUSTERIID" class="btn btn-success">GUNCELLE</a> </td>
                <td>@Html.ActionLink("SİL BUTONU", "SIL", new {id=musteri.MUSTERIID} , new { @class = "btn btn-warning", onclick = "return confirm('gerçekten silmek istiyor musunuz')" })</td>
            </tr>

        }
    </tbody>
</table>
<a href="/MUSTERI/YeniMusteri" class="btn btn-primary center-block">YENİ MUSTERI EKLE</a>
