@model MVCSTOKTAKIP.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">

    <div>
        <label>Musteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:blue" })
    </div>
    <div>
        <label>Musteri Soyadı  </label>
        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:blue" })
    </div>
    <div style="margin-top:15px">
    <button class="btn-info" id="btn1"> MUSTERI EKLE </button>
    </div>

    <script>
        $("#btn1").click(function()
        {
            alert('Müşteri Ekleme İşlemi Yapıldı')
        })
    </script>





</form>

