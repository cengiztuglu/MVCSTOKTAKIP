@using MVCSTOKTAKIP.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>EKLE</th>
            <th>SİL</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {

            <tr>
                <th>@urun.URUNID</th>
                <td>@urun.URUNAD</td>
                <td>@urun.MARKA</td>
                <td>@urun.TBLKATEGORILER.KATEGORIAD</td>
                @*INNER JOİN KULLANIMI // TABLOLAR İLİŞKİLİ OLDUĞU İÇİN URUN TABLOSUNDA ÜRÜN ID YE EŞİT OLAN ADI GETİRİR *@
                <td>@urun.FIYAT</td>
                <td>@urun.STOK</td>
                <td><a href="/URUN/SIL/@urun.URUNID" class="btn btn-danger">SIL</a> </td>
                <td><a href="/URUN/UrünGetir/@urun.URUNID" class="btn btn-success">GUNCELLE</a> </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/URUN/YeniUrun" class="btn btn-primary center-block">YENİ URUN EKLE</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>   @*jquery data table*@

